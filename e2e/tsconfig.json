{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@pages/*": ["pages/*"],
      "@fixtures/*": ["fixtures/*"],
      "@helpers/*": ["helpers/*"],        
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
  
  